{
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!tide-stations\\.json$|articles/.*|robots\\.txt$|sitemap\\.xml$|learn(?:$|/.+$)|api/).*)",
      "destination": "/index.html"
    },
    {
      "source": "/learn",
      "destination": "/learn/index.html"
    },
    {
      "source": "/learn/:slug",
      "destination": "/learn/:slug/index.html"
    }
  ],
  "headers": [
    {
      "source": "/tide-stations.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400, stale-while-revalidate=604800"
        },
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    }
  ]
}
